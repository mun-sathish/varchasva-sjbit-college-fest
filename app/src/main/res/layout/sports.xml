<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b16"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

 <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border2"
                android:layout_marginTop="30dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/event1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:textColor="#FFEB3B"
                   android:padding="20dp"
                    android:text="Sports"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="40dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                                android:layout_marginBottom="50dp"
                
                android:orientation="vertical" >

                <Button
                    android:id="@+id/event2"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="#5D4037"
                    android:text="Mini Cricket"
                    android:onClick="minicricket"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/event3"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="#FF9800"
                    android:text="Mini Soccer"
                    android:onClick="minifootball"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/event4"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="#727272"
                    android:text="Mini Basketball"
                    android:onClick="minibasketball"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/event5"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="#1976D2"
                    android:text="Mini Volleyball"
                    android:onClick="minivolleyball"
                    android:textColor="#FFFFFF" />
                  <Button
                    android:id="@+id/event6"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="#C2185B"
                    android:text="Lagori"
                    android:onClick="lagori"
                    android:textColor="#FFFFFF" />
                  <Button
                    android:id="@+id/event7"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="#4CAF50"
                    android:text="Tug of War"
                    android:onClick="tugofwar"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
<!--  
            <TextView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="parttion"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="General Rules:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="              Sports bets are accepted on a &apos;non-runner no bet&apos; basis unless stated otherwise; in this case stakes will be refunded on a player or team withdrawn prior to the start of an event. If you have placed a winning bet on a sporting event run on a &apos;non-runner no bet&apos; basis and a different player or team is withdrawn, suspended or disqualified in that market, we may apply the equivalent to Tattersalls&apos; Rule 4 (c) to your winnings, based on the price of the selection withdrawn."
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20dp" />
        -->
        </LinearLayout>
        
    </ScrollView>

</LinearLayout>