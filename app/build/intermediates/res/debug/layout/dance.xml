<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b16"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border2"
                android:layout_marginTop="30dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/event1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:textColor="#FFEB3B"
                   android:padding="20dp"
                    android:text="Dance"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="40dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                                android:layout_marginBottom="50dp"
                
                android:orientation="vertical" >

                <Button
                    android:id="@+id/event2"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="#795548"
                    android:text="Group Dance Western"
                    android:onClick="western"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/event3"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="#C5CAE9"
                    android:text="Group Dance Eastern"
                    android:onClick="eastern"
                    android:textColor="#FFFFFF" />

                

                <Button
                    android:id="@+id/event5"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="#FF4081"
                    android:text="Jodi No 1"
                    android:onClick="jodino"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/event6"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="#FFA000"
                    android:text="Solo Dance (Non-Classical)"
                    android:onClick="solodance"
                    android:textColor="#FFFFFF" />
                
                <Button
                    android:id="@+id/event7"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="#7B1FA2"
                    android:text="Solo Dance (Adaptive)"
                    android:onClick="soloadap"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <TextView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="-----------------------------------------------------"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30dp" />
<LinearLayout 
    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                
                
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border2"
                android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/event8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFEB3B"
                android:padding="20dp"
                android:text="General Rules:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20dp" />
            </LinearLayout>
<LinearLayout 
    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border1"
                android:layout_centerHorizontal="true">
                
            <TextView
                android:id="@+id/event9"
                android:layout_width="246dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="15dp"
                android:text="@string/dance"
                android:textColor="#FFF9C4"
                android:textSize="15dp"
                
                 />
       </LinearLayout>
            </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/D:/AS/varva/app/src/main/res/layout/dance.xml -->